<p style="color: green"><%= notice %></p>

<%= render @question %>

<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <p>
    Name:<br>
    <%= answer.name %>
  </p>
  <p>
    Content:<br>
    <%= answer.content %>
  </p>
  <p>
  <%= link_to 'Destroy Answer', [answer.question, answer],
    data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %>
  </p>
<% end %>

<h2>Add an answer:</h2>
<%= form_with model: [@question, @question.answers.build] do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>  
  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>
  <p>
    <%= form.submit %>
  </div>
<% end %>

<div>
  <%= link_to "Edit this question", edit_question_path(@question) %> |
  <%= link_to "Back to questions", questions_path %>

  <%= button_to "Destroy this question", @question, method: :delete %>
</div>
